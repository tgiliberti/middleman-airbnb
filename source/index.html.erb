    <h1>Le Wagon Rio de Janeiro</h1>
    <p>Learn to code with us in Rio</p>
    <a class="btn btn-primary btn-lg">Start now</a>
  </div>
</div>


<div class="container">
  <div class="row">
    <% data.cities.each do |city| %>
    <div class="col-xs-12 col-sm-4">

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= city.picture %>');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2>Le Wagon <%= city.name %></h2>
            <p><%= city.description %></p>
          </div>
          <%= image_tag city.user_picture, class: "card-user" %>
          <a class="card-link" href="#" ></a>
        </div>

      </div>
      <% end %>

